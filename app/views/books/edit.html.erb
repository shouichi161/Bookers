<section class="editing-book">
  <h1 class="title">Editing Book</h1>

  <div class="errors">
    <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul class="errors-message">
      <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <%=form_with model:@book do |f| %>

    <div class="edit-title">
      <p>Title</p>
      <%=f.text_field:title %>
    </div>

    <div class="edit-body">
      <p>Body</p>
      <%=f.text_area:body %>
    </div>

    <div class="edit-submit">
      <%=f.submit' Update Book ' %>
    </div>

  <% end %>

  <%=link_to'Show',book_path %>
  |
  <%=link_to'Back','/books' %>

</section>

