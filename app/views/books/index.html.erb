<section class="index-box">
<h1>Books</h1>

<% @books.each do |book| %>

<p>Title</p>
<span><%=book.title %></span>

<p>Body</p>
<span><%=book.body %></span>


<% end %>

</section>


<section class="new-box">
  <h2>New book</h2>

  <%=form_with model:@book,url:'/books',method: :post do |f| %>
  
  <div class="new-book-title">
    <p>Title</p>
    <%=f.text_field:title %>
  </div>

  <div class="new-book-body">
    <p>Body</p>
    <%=f.text_area:body %>
  </div>
  
  <div class="new-submit">
    <%=f.submit" Create Book " %>
  </div>

<% end %>

</section>
